{%- block unite_cms_storage_file_widget -%}
    <{{ tag }} {{ block('widget_attributes') }} value="{{ value }}"></{{ tag }}>

    {% if not alreadyRendered('UniteCMSStorageBundle') %}
        <link type="text/css" rel="stylesheet" href="{{ asset('main.css', 'UniteCMSStorageBundle') }}">
        <script type="text/javascript" src="{{ asset('main.js', 'UniteCMSStorageBundle') }}"></script>
    {% endif %}
{%- endblock unite_cms_storage_file_widget -%}
